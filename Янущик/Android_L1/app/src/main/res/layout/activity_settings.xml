<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Увеличиваем высоту EditText -->
    <EditText
        android:id="@+id/url_edit_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Введите URL сервера"
        android:minHeight="48dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Разработал Янущик"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>
    <!-- Увеличиваем высоту Spinner -->
    <Spinner
        android:id="@+id/url_spinner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
    android:layout_marginTop="16dp"
    android:minHeight="48dp" />

    <CheckBox
        android:id="@+id/name_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показывать название"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/description_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показывать описание"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/image_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показывать изображение"
        android:layout_marginTop="8dp" />

    <!-- Увеличиваем высоту EditText для количества строк -->
    <EditText
        android:id="@+id/rows_edit_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
    android:hint="Количество строк"
    android:inputType="number"
    android:layout_marginTop="16dp"
    android:minHeight="48dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
    android:text="Сохранить"
    android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание лабы(нажимает Янущик)"
        android:layout_marginTop="16dp"/>

</LinearLayout>